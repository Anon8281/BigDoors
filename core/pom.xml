        <!-- PlotSquared 3 -->
        <dependency>
            <groupId>com.intellectualcrafters</groupId>
            <artifactId>plot</artifactId>
            <version>19.05.28-e4fbc23-769</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/PlotSquared-Bukkit-19.05.28-e4fbc23-769.jar</systemPath>
        </dependency>

        <!-- PlotSquared 4 -->
        <dependency>
            <groupId>com.github.intellectualsites</groupId>
            <artifactId>plotsquared</artifactId>
            <version>4.4.495</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/PlotSquared-Bukkit-4.4.495.jar</systemPath>
        </dependency>

        <!-- PlotSquared 5 -->
        <dependency>
            <groupId>com.plotsquared</groupId>
            <artifactId>core</artifactId>
            <version>5.13.13</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/PlotSquared-Bukkit-5.13.13.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.plotsquared</groupId>
            <artifactId>bukkit</artifactId>
            <version>5.13.13</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/PlotSquared-Bukkit-5.13.13.jar</systemPath>
        </dependency>

        <!-- GriefDefender -->
        <dependency>
            <groupId>com.griefdefender</groupId>
            <artifactId>griefdefender</artifactId>
            <version>1.5.9</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/griefdefender-bukkit-1.5.9.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.griefdefender</groupId>
            <artifactId>griefdefenderapi</artifactId>
            <version>2.0.0-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/griefdefenderapi-2.0.0-SNAPSHOT.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <finalName>BigDoors</finalName>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
            <resource>
                <directory>${basedir}/..</directory>
                <includes>
                    <include>changelog.txt</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>build.number</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${dependency.version.maven-compiler}</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${dependency.version.maven-shade}</version>
                <configuration>
                    <relocations>
                        <relocation>
                            <pattern>org.bstats</pattern>
                            <shadedPattern>nl.pim16aap2.bigDoors.lib.bstats</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>nl.pim16aap2.jcalculator</pattern>
                            <shadedPattern>nl.pim16aap2.bigDoors.lib.jcalculator</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>antrunner</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <ant antfile="${basedir}/build.xml"/>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
