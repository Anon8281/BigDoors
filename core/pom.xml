        <repository>
            <id>Massive</id>
            <url>https://repo.dustplanet.de/artifactory/ext-release-local/</url>
        </repository>

        <!-- Towny -->
        <repository>
            <id>articdive-repo</id>
            <url>https://nexus.articdive.de/repository/maven-releases</url>
        </repository>
    </repositories>

