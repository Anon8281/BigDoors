    <modelVersion>4.0.0</modelVersion>

    <artifactId>BigDoors-core</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <dependency.version.jcalculator>1.7</dependency.version.jcalculator>
        <dependency.version.maven-compiler>3.8.1</dependency.version.maven-compiler>
        <dependency.version.maven-shade>3.3.0-SNAPSHOT</dependency.version.maven-shade>
        <dependency.version.maven-jar>3.2.0</dependency.version.maven-jar>
    </properties>

    <repositories>
        <!-- bStats -->
        <repository>
            <id>bstats-repo</id>
            <url>http://repo.bstats.org/content/repositories/releases/</url>
